{
  "name": "twemazing",
  "version": "3.0.0",
  "description": "ðŸ«  A fully automated library for Twemoji.",
  "jsdelivr": "./x/twemoji.css",
  "main": "./x/utilities.js",
  "sass": "./x/twemoji.scss",
  "types": "./types/index.d.ts",
  "files": [
    "*.{css,scss,js}"
  ],
  "scripts": {
    "build:updater": "esbuild src/updater/index.ts --bundle --minify --format=cjs --legal-comments=none --platform=node --outfile=dist/updater.js",
    "build:utilities": "esbuild src/utilities.ts --bundle --minify --format=cjs --legal-comments=none --outfile=x/utilities.js",
    "publish:canary": "npm version prerelease --preid=canary && npm publish --tag canary",
    "publish:patch": "npm version patch && npm publish",
    "publish:minor": "npm version minor && npm publish",
    "publish:major": "npm version major && npm publish"
  },
  "devDependencies": {
    "@types/fs-extra": "^9.0.13",
    "@types/node": "^18.6.3",
    "@types/svgo": "^2.6.3",
    "chalk": "^4.1.2",
    "clean-css": "^5.3.0",
    "esbuild": "^0.14.45",
    "fs-extra": "^10.1.0",
    "svgo": "^2.8.0",
    "ts-node": "^10.8.1",
    "typescript": "^4.7.3"
  }
}
